# PythonAnywhere Environment Configuration
# Copy this file to .env on PythonAnywhere server

# Django Settings
SECRET_KEY=your-production-secret-key-here-change-this
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings.dev

# Allowed Hosts (use your PythonAnywhere domain)
ALLOWED_HOSTS=diamondweb.pythonanywhere.com

# CSRF Trusted Origins (use HTTPS)
CSRF_TRUSTED_ORIGINS=https://diamondweb.pythonanywhere.com

# Database Configuration (SQLite for PythonAnywhere free tier)
# For MySQL on paid plans, uncomment and configure:
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=diamondweb$default
# DB_USER=diamondweb
# DB_PASSWORD=your-mysql-password
# DB_HOST=diamondweb.mysql.pythonanywhere-services.com

# Email Configuration (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@example.com
# EMAIL_HOST_PASSWORD=your_app_specific_password
